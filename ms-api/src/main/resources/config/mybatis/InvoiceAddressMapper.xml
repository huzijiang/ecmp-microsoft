<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hq.ecmp.mscore.mapper.InvoiceAddressMapper">

    <resultMap type="com.hq.ecmp.mscore.domain.InvoiceAddress" id="InvoiceAddressResult">
        <result property="addressId"    column="address_id"    />
        <result property="accepter"    column="accepter"    />
        <result property="mobile"    column="mobile"    />
        <result property="address"    column="address"    />
        <result property="itIsDefault"    column="it_is_default"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectInvoiceAddressVo">
        select address_id, accepter, mobile, address, it_is_default, create_by, create_time, update_by, update_time from invoice_address
    </sql>

    <select id="selectInvoiceAddressList" parameterType="com.hq.ecmp.mscore.domain.InvoiceAddress" resultMap="InvoiceAddressResult">
        <include refid="selectInvoiceAddressVo"/>
        <where>
            <if test="accepter != null  and accepter != ''"> and accepter = #{accepter}</if>
            <if test="mobile != null  and mobile != ''"> and mobile = #{mobile}</if>
            <if test="address != null  and address != ''"> and address = #{address}</if>
            <if test="itIsDefault != null  and itIsDefault != ''"> and it_is_default = #{itIsDefault}</if>
        </where>
    </select>

    <select id="selectInvoiceAddressById" parameterType="Long" resultMap="InvoiceAddressResult">
        <include refid="selectInvoiceAddressVo"/>
        where address_id = #{addressId}
    </select>

    <insert id="insertInvoiceAddress" parameterType="com.hq.ecmp.mscore.domain.InvoiceAddress">
        insert into invoice_address
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="addressId != null ">address_id,</if>
            <if test="accepter != null  and accepter != ''">accepter,</if>
            <if test="mobile != null  and mobile != ''">mobile,</if>
            <if test="address != null  and address != ''">address,</if>
            <if test="itIsDefault != null  and itIsDefault != ''">it_is_default,</if>
            <if test="createBy != null ">create_by,</if>
            <if test="createTime != null ">create_time,</if>
            <if test="updateBy != null ">update_by,</if>
            <if test="updateTime != null ">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="addressId != null ">#{addressId},</if>
            <if test="accepter != null  and accepter != ''">#{accepter},</if>
            <if test="mobile != null  and mobile != ''">#{mobile},</if>
            <if test="address != null  and address != ''">#{address},</if>
            <if test="itIsDefault != null  and itIsDefault != ''">#{itIsDefault},</if>
            <if test="createBy != null ">#{createBy},</if>
            <if test="createTime != null ">#{createTime},</if>
            <if test="updateBy != null ">#{updateBy},</if>
            <if test="updateTime != null ">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateInvoiceAddress" parameterType="com.hq.ecmp.mscore.domain.InvoiceAddress">
        update invoice_address
        <trim prefix="SET" suffixOverrides=",">
            <if test="accepter != null  and accepter != ''">accepter = #{accepter},</if>
            <if test="mobile != null  and mobile != ''">mobile = #{mobile},</if>
            <if test="address != null  and address != ''">address = #{address},</if>
            <if test="itIsDefault != null  and itIsDefault != ''">it_is_default = #{itIsDefault},</if>
            <if test="createBy != null ">create_by = #{createBy},</if>
            <if test="createTime != null ">create_time = #{createTime},</if>
            <if test="updateBy != null ">update_by = #{updateBy},</if>
            <if test="updateTime != null ">update_time = #{updateTime},</if>
        </trim>
        where address_id = #{addressId}
    </update>

    <delete id="deleteInvoiceAddressById" parameterType="Long">
        delete from invoice_address where address_id = #{addressId}
    </delete>

    <delete id="deleteInvoiceAddressByIds" parameterType="String">
        delete from invoice_address where address_id in
        <foreach item="addressId" collection="array" open="(" separator="," close=")">
            #{addressId}
        </foreach>
    </delete>

</mapper>
