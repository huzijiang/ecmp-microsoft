    <!--新增员工&用车制度中间表信息-->
    <update id="addUserRegimeRelation">
        update  user_regime_relation_info
        set
        regimen_id = #{regimenId}
        where
        user_id =#{userId}
    </update>

    <!--修改员工&用车制度中间表信息-->
    <insert id="updateUserRegimeRelation">
        insert into user_regime_relation_info
        <trim prefix="(" suffix=")" suffixOverrides=",">
        <if test="user_id != null  and user_id != ''">user_id,</if>
        <if test="regimen_id != null  and regimen_id != ''">regimen_id</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
        <if test="userId != null  and userId != ''">#{userId},</if>
        <if test="regimenId != null  and regimenId != ''">#{regimenId}</if>
        </trim>
    </insert>

    <!--查询手机号与邮箱是否已经存在-->
    <select id="selectPhoneAndEmailExist" resultType="Integer">
      select count(1)
      from  ecmp_user
      where
      status='0' and del_flag='0'
      <if test="phonenumber != null  and phonenumber != ''"> and phonenumber = #{phonenumber}</if>
      <if test="email != null  and email != ''"> and email = #{email}</if>
    </select>

    <!--根据deptId和deptType删除信息-->
    <update id="updateDelFlagById" >
      update ecmp_user  SET del_flag='2' where user_id = #{userId}
    </update>


    <!--查询该部门下的所有员工编号-->
    <select id="getEcmpUserIdsByDeptId" resultType="Long" parameterType="Long">
        select
        user_id
        from  ecmp_user
        where
        del_flag='0'
        <if test="dept_id != null  and dept_id != ''"> and dept_id = #{dept_id}</if>
    </select>

    <!--查询员工列表-->
    <select id="getEcmpUserList" resultType="com.hq.ecmp.mscore.dto.EcmpUserDto">
        select
        nick_name as nickName,phonenumber,user_id as userId,
        (select dept_name from ecmp_org where dept_id= #{deptId} and dept_type='1') as subCompany,
        (select dept_name from ecmp_org where dept_id=#{deptId} and dept_type='2') as subDept,
        `status`
        select name from regime_info where (select regime_id from  user_regime_relation_info where user_id=#{userId}
        from  ecmp_user
        where
        del_flag='0'
        <if test="dept_id != null  and dept_id != ''"> and dept_id = #{deptId}</if>
    </select>

    <!--根据deptId和deptType删除信息-->
    <update id="updatePhoneNum" >
      update ecmp_user  SET phonenumber=#{newPhoneNum},userName=#{newPhoneNum} where user_id = #{userId}
    </update>

    <!--获取员工详情-->
    <select id="selectEcmpUserDetail" resultType="com.hq.ecmp.mscore.dto.EcmpUserDto" parameterType="Long">
      SELECT
      user_id,`dept_id`, `nick_name`,  `email`, `phonenumber`, `sex`, `station_code`,
      (select dept_name from ecmp_org where dept_id= #{deptId} and dept_type='1') as subCompany,
      select role_name from ecmp_role (select role_id from ecmp_user_role where user_id= = #{userId}),
      select name from regime_info where (select regime_id from  user_regime_relation_info where user_id=#{userId}
      from ecmp_user
      where
      user_id = #{userId}
    </select>

    <!--已离职数量-->
    <select id="selectDimissionCount" resultType="Interger">
      SELECT
      count(1)
      from ecmp_user
      where
      dimission_time is not null
    </select>

    <!--设置离职日期-->
    <update id="updateDimissionTime" >
      update ecmp_user  SET dimission_time=#{dimissionTime} where user_id = #{userId}
    </update>

    <!--已离职员工编号-->
    <select id="selectDimissionEcmpUserIds" resultType="Long">
     SELECT
        user_id
        from ecmp_user
        where
        dimission_time is not null
    </select>

    <!--已离职列表-->
    <select id="selectDimissionList" resultType="com.hq.ecmp.mscore.dto.EcmpUserDto">
        select
        nick_name as nickName,phonenumber,user_id as userId,
        (select dept_name from ecmp_org where dept_id= #{deptId} and dept_type='1') as subCompany,
        (select dept_name from ecmp_org where dept_id=#{deptId} and dept_type='2') as subDept,
        dimission_time
        from  ecmp_user
        where
        del_flag='0'
        <if test="dept_id != null  and dept_id != ''"> and dept_id = #{deptId}</if>
        and user_id= #{userId}
    </select>
    <select id="userItisExist"  resultType="java.lang.Integer">
          select count(*) from ecmp_user  where phonenumber=#{phoneNumber}
    </select>
</mapper>
